program s5a1a;

var
  id, idn : string;
  con : char;
  i, idc : integer;
  valid : boolean;

procedure init;
  begin
    con := 'y';
    valid := true;
  end;

procedure name;
  var
    i : integer;
    n : string;
  begin
  write('Enter your name : ');
      readln(n);
      for i := 1 to length(n) do
        if (n[i] >= 'a') and (n[i] <= 'z') then
          n[i] := chr( ord(n[i]) - 32 );
      writeln(n);
  end;

procedure sex;
  var
    s : char;
  begin
    repeat
      write('Enter your sex : ');
      readln(s);
    until (s = 'f') or (s = 'F') or (s = 'm') or (s = 'M');
    writeln(s);
  end;

procedure chkDig(cid : string; var v : boolean);
  var
    num : array[1..8] of integer;
    i, err, j, sum : integer;
  begin
    num[8] := ord(cid[1]) - 64;
    j := 2;
    for i := 7 downto 1 do
      begin
        val(cid[j], num[i], err);
        j := j + 1;
      end;
    sum := 0;
    for i := 8 downto 1 do
      sum := sum + (num[i] * i);
    if sum/11 <> 0 then
      v := false;
    for i := 8 downto 1 do
      write(num[i]:2);
    writeln(sum/11);
  end;

procedure hkid;
  begin
    write('Enter your HKID : ');
    readln(id);
    if length(id) <> 10 then
      valid := false;
    if (id[1] <= 'A') or (id[1] >= 'Z') then
      valid := false;
    if (id[8] <> '(') or (id[10] <> ')') then
      valid := false;
    idn := copy(id, 2, 6) + id[9];
    val(idn, i, idc);
    if idc <> 0 then
      valid := false;
    chkDig(id, valid);
    writeln(valid);
  end;

begin
  init;
  while (con = 'y') or (con = 'y') do
    begin
      name;
      sex;
      hkid;
      write('Continus (Y/N) ? ');
      readln(con);
    end;
  readln
end.
